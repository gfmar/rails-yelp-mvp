


<div class="container">

  <h2><%= @restaurant.name %></h2>
  <br>

    <% rating = 0.0 %>
  <% @restaurant.reviews.each do |review| %>
    <% rating += review.rating %>

  <% end %>

    <% rating = rating / @restaurant.reviews.count %>
    <p> Average rating: <%= rating %> </p>

  <p>
    Address:
    <%= @restaurant.address %>
  </p>

  <p>
    Cuisine:
    <%= @restaurant.category %>
  </p>




  <% @restaurant.reviews.each do |review| %>

    <li> <%= review.rating %> <em> <%= review.content %>  </em> </li>

  <% end %>
  <br>

  <p>
    <%= link_to "Add rating", new_restaurant_review_path(@restaurant), :class=>"btn btn-primary" %>
  </p>

  <p>
    <%= link_to "Edit restaurant", edit_restaurant_path(@restaurant), :class=>"btn btn-primary" %>
    <%= link_to "Delete restaurant", restaurant_path(@restaurant), method: :delete, :class=>"btn btn-danger"  %>
  </p>

  <p>
    <%= link_to "Back to list of restaurants", restaurants_path, :class=>"btn btn-primary" %>
  </p>

</div>



